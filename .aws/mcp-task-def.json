{
  "family": "villa-ops-mcp",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::930936105501:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "villa-ops-mcp",
      "image": "930936105501.dkr.ecr.us-east-1.amazonaws.com/villa-ops-backend:latest",
      "command": ["python", "-m", "app.mcp.server"],
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8001/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      },
      "environment": [
        { "name": "ENVIRONMENT", "value": "production" },
        { "name": "DATABASE_URL", "value": "__DATABASE_URL__" },
        { "name": "REDIS_URL", "value": "__REDIS_URL__" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/villa-ops-mcp",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
}
