{
  "family": "villa-ops-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::930936105501:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "villa-ops-backend",
      "image": "930936105501.dkr.ecr.us-east-1.amazonaws.com/villa-ops-backend:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      },
      "environment": [
        { "name": "ENVIRONMENT", "value": "production" },
        { "name": "DATABASE_URL", "value": "__DATABASE_URL__" },
        { "name": "REDIS_URL", "value": "__REDIS_URL__" },
        { "name": "JWT_SECRET_KEY", "value": "__JWT_SECRET_KEY__" },
        { "name": "MCP_SERVER_URL", "value": "http://mcp.villaops.local:8001/mcp" },
        { "name": "FRONTEND_URL", "value": "__FRONTEND_URL__" },
        { "name": "CORS_ORIGINS", "value": "[\"*\"]" },
        { "name": "STRIPE_SECRET_KEY", "value": "__STRIPE_SECRET_KEY__" },
        { "name": "STRIPE_WEBHOOK_SECRET", "value": "__STRIPE_WEBHOOK_SECRET__" },
        { "name": "STRIPE_PUBLISHABLE_KEY", "value": "__STRIPE_PUBLISHABLE_KEY__" },
        { "name": "STRIPE_PRO_PRICE_ID", "value": "__STRIPE_PRO_PRICE_ID__" },
        { "name": "STRIPE_BUSINESS_PRICE_ID", "value": "__STRIPE_BUSINESS_PRICE_ID__" },
        { "name": "GEMINI_API_KEY", "value": "__GEMINI_API_KEY__" },
        { "name": "GOOGLE_CLIENT_ID", "value": "__GOOGLE_CLIENT_ID__" },
        { "name": "GOOGLE_CLIENT_SECRET", "value": "__GOOGLE_CLIENT_SECRET__" },
        { "name": "GOOGLE_REDIRECT_URI", "value": "__GOOGLE_REDIRECT_URI__" },
        { "name": "GITHUB_CLIENT_ID", "value": "__GITHUB_CLIENT_ID__" },
        { "name": "GITHUB_CLIENT_SECRET", "value": "__GITHUB_CLIENT_SECRET__" },
        { "name": "GITHUB_REDIRECT_URI", "value": "__GITHUB_REDIRECT_URI__" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/villa-ops-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
}
