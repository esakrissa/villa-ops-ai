# ============================================
# VillaOps AI â€” Environment Variables
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# --- App ---
APP_NAME=VillaOps AI
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql+asyncpg://villa:villa_secret@localhost:5432/villa_ops

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- JWT Auth ---
JWT_SECRET_KEY=change-me-in-production-use-a-long-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Google OAuth ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# --- GitHub OAuth ---
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# --- Stripe ---
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_PRICE_ID=
STRIPE_BUSINESS_PRICE_ID=

# --- LLM (LiteLLM) ---
DEFAULT_LLM_MODEL=gemini/gemini-3.0-flash
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
LITELLM_CACHE_ENABLED=true

# --- MCP Server ---
MCP_SERVER_URL=http://localhost:8001/sse

# --- Frontend ---
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
